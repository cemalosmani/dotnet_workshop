@model EntityLayer.Concrete.Message

@{
    ViewBag.Title = "title";
    Layout = "AuthorLayout";
}

<h2>Mesaj Detay Sayfası</h2>
<br/>
@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post))
{
    @Html.Label("Mesaj Id")
    @Html.TextBoxFor(x => x.MessageId, new { @class = "form-control" })
    <br/>
    @Html.Label("Mesaj Başlığı")
    @Html.TextBoxFor(x => x.MessageSubject, new { @class = "form-control" })
    <br/>
    @Html.Label("Mesaj İçeriği")
    @Html.TextBoxFor(x => x.MessageDetails, new { @class = "form-control" })
    <br/>
    <a href="~/Message/Inbox" class="btn btn-info">Mesajlara Dön</a>
}

