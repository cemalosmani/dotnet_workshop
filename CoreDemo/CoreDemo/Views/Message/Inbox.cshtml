@using EntityLayer.Concrete
@model List<Message>
@{
    ViewBag.Title = "title";
    Layout = "AuthorLayout";
}

<h2>Gelen Kutusu</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageId</th>
            <td>@item.MessageSubject</td>
            <td>@item.SenderUser.AuthorName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-danger">Mesajı Aç</a></td>
        </tr>
    }
</table>
<a href="~/Blog/AddBlog" class="btn btn-primary">Yeni Mesaj Oluştur</a>
